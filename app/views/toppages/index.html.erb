<div class="container quiz-menu">
  <div class="row">
    <div class="col-sm-12">
      <h1>問題検索フォーム</h1>
      <form>
        <div class="form-group">
          <input type="text" class="foum-group" placeholder="検索">
        </div>
      </form>
    </div>
  </div>
